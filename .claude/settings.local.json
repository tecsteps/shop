{
    "permissions": {
        "allow": [
            "Bash(git add:*)",
            "Bash(git commit:*)",
            "WebFetch(domain:example.com)"
        ]
    },
    "enableAllProjectMcpServers": true,
    "enabledMcpjsonServers": [
        "laravel-boost",
        "herd"
    ],
    "sandbox": {
        "enabled": true,
        "autoAllowBashIfSandboxed": true
    },
    "hooks": {
        "SessionStart": [
            {
                "matcher": "compact",
                "hooks": [
                    {
                        "type": "command",
                        "command": "cat README.md"
                    }
                ]
            }
        ]
    }
}
